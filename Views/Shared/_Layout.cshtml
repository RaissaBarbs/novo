<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMvcMysql</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMvcMysql.styles.css" asp-append-version="true" />
</head>
<body>
        <nav>
            <h1 class="logo" href="/Home">CODERCARRER</h1>
            <div class="search-box">
                <input type="text" class="search-txt" placeholder="Pesquisar vagas...">
                <img src="~/css/loupe.png" alt="Lupa" height="20" width="20">
            </div>
            <div class="itens">
                <ul>
                    <li><a href="/Home">HOME</a></li>
                    <li><a href="/Home">LOGIN</a></li>
                </ul>
            </div>
            <a href="#"><button>SOBRE A EMPRESA</button></a>
        </nav>

    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>